@article{RN7288,
author = {Cassini, M. H. and Foger, B.},
title = {The effect of food distribution on habitat use of foraging hedgehogs and the ideal non-territorial despotic distribution},
journal = {Acta Oecologica-International Journal of Ecology},
volume = {16},
number = {6},
pages = {657-669},
abstract = {An analysis of the spatial distribution and the foraging behaviour of hedgehogs (Erinaceus europaeus) within open meadows in relation to the availability of earthworms showed that (1) the relative increase in the density of hedgehogs was directly proportional to the relative increase in density of worms, and (2) intake rate was systematically higher in sites with high density of worms than in poor sites, and individual hedgehogs had differential access to those sires, with one category of animals, i.e., heavy females, spending most of the night in rich sires and juveniles, males and light females showing a variable use of the rich sites. The first result but not the second agrees with the prediction of the model of the ideal free distribution (FRETWELL & LUCAS, 1970). A conceptual model named Ideal Non-territorial Despotic Distribution was derived empirically to explain the distribution of hedgehogs in open meadows. INDD differs from other models in that competitors are free to move (1) outside the system and (2) between foraging sites as long as they keep an individual space, such that bad competitors are prevented to entering the best sites when these are saturated with good competitors.},
ISSN = {1146-609X},
