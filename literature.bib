}

@article{RN3463,
author = {Cagnacci, F. and Massei, G. and Cowan, D. P. and Walker, N. and Delahay, R. J.},
title = {Effects of bait type and deployment strategy on uptake by free-living badgers},
journal = {Wildlife Research},
volume = {34},
number = {6},
pages = {454-460},
abstract = {Baits are increasingly used in wildlife management to deliver orally administered vaccines and contraceptives. The efficacy and cost-effectiveness of vaccination or fertility-control campaigns can be substantially affected by bait uptake rates. This study assessed whether bait type and deployment strategy affected bait uptake by free-living badgers (Meles meles L.). Six social groups of badgers were presented with three bait types (meat, fruit, cereals) and two deployment strategies (dispersed single baits versus aggregated multiple baits at fixed baiting stations) for six weeks. In each social group, the type of bait and deployment strategy were rotated every week so that by the end of the test every group had experienced all combinations. On three days, biomarkers (ethyl iophenoxic acid, propyl iophenoxic acid and rhodamine B) were added to the baits to determine the proportion of badgers ingesting these baits. The results indicated that both bait type and deployment strategy affected the proportion of baits eaten by badgers and the number of badgers gaining access to baits. Meat and fruit baits were taken significantly more frequently than cereals, and dispersed meat baits had the highest rates of disappearance. Biomarker levels suggested that the proportion of badgers that gained access to all baits was substantially lower when baits were aggregated, although small sample sizes prevented statistical assessment of this effect. The results suggest that dispersed single baits are likely to be consumed in greater proportions by a higher number of individual badgers than multiple baits at fixed stations.},
