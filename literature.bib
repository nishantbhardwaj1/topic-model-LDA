@article{RN7301,
author = {Morris, P. A.},
title = {A STUDY OF HOME RANGE AND MOVEMENTS IN THE HEDGEHOG (ERINACEUS-EUROPAEUS)},
journal = {Journal of Zoology},
volume = {214},
